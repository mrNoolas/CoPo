<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ic_tea.david.copo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_copo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- TODO: landscape mode only??? -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayEntries"
            android:label="@string/title_activity_display_entries"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ic_tea.david.copo.MainActivity" />
        </activity>
        <activity
            android:name=".EditEntry"
            android:parentActivityName=".DisplayEntries"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ic_tea.david.copo.DisplayEntries" />
        </activity>
        <activity
            android:name=".ProjectsActivity"
            android:label="@string/title_activity_projects"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ic_tea.david.copo.MainActivity" />
        </activity>
    </application>

</manifest>