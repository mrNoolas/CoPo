<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/select_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="@string/select_competence_mesage"/>

    <Button
        android:id="@+id/share_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="shareAllClick"
        android:padding="4dp"
        android:text="@string/share_all"
        android:textSize="16sp" />
    <ListView
        android:id="@+id/main_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/share_all_button"
        android:layout_below="@id/select_category" />
</RelativeLayout>